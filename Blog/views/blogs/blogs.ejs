<!-- //blogs/blogs -->
<% layout("/layouts/boilerplate") %>

<head>
  <link rel="stylesheet" href="../../public/css/blogs.css" />
</head>
<body>
  <div class="blogPost">
    <% blogData.forEach(blog => { %>
    <div class="blog-container">
      <a href="/blogs/<%= blog._id %>">
        <div class="blogProfile">
          <img
            src="../../public/images/<%= blog.profileImage %>"
            alt="ProfileImage"
            class="img-fluid rounded-circle blogProfile"
          />
          <h4 class=""><%= blog.authorName %></h4>
        </div>
        <div class="blog-header">
          <h5 class="blog-title"><%= blog.title %></h5>
          <p class="blog-meta">
            Posted on <%= blog.date %>
             <!-- by <%= blog.authorName %> -->
          </p>
        </div>
        <!-- <div class="blog-content">
          <p><%= blog.content %></p>
        </div> -->
      </a>
    </div>
    <% }) %>
  </div>
</body>
